<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="40dip" android:layout_gravity="center_horizontal"
	android:background="@drawable/header_hdpi">

	<com.browser.engine.ui.CTextView
		android:text="DB Browser" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:padding="5dip"
		android:textSize="12dip" android:textStyle="bold" customFont="silom"
		android:textColor="@color/white" />


	<com.browser.engine.ui.CTextView
		android:id="@+id/statusText" android:text="" android:layout_width="180dip"
		android:layout_height="wrap_content" android:padding="5dip"
		android:textSize="10dip" android:textStyle="bold" customFont="silom"
		android:textColor="@color/white" />

	<LinearLayout android:orientation="horizontal"
		android:gravity="right" android:layout_width="wrap_content"
		android:layout_height="fill_parent">

		<ImageButton android:id="@+id/btnError" android:src="@drawable/b_error"
			android:visibility="invisible" android:clickable="false" android:layout_gravity="center_vertical"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:background="@null" />

	</LinearLayout>

</LinearLayout>